<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/frame14"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="600"
            android:text="Hello!"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Type_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="400"
            android:text="Enter your email and password below"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/frame36"
        android:layout_width="328dp"
        android:layout_height="174dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="56dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/frame34"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_gravity="center_horizontal"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_gravity="center_horizontal"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/a0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:textColor="#BDBDBD"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editTextTextEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#BDBDBD"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/frame31"
            android:layout_width="wrap_content"
            android:layout_height="18dp"

            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/frame_checkBox"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="126dp"
                    android:layout_height="18dp"
                    android:text="Remember me"
                    android:textColor="#B2B2B3"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:text="Forgot your password?"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="180dp"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        app:strokeColor="#FB5E06"
        app:strokeWidth="2dp"
        android:textSize="16sp"
        android:text="LOGIN" />

    <LinearLayout
        android:id="@+id/frame29"
        android:layout_width="198dp"
        android:layout_height="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/frame_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donâ€™t have account?"
                android:textColor="#BDBDBD"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/a4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>
